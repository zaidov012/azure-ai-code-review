[flake8]
max-line-length = 100
extend-ignore = 
    # W503: line break before binary operator (conflicts with black)
    W503,
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    dist,
    build,
    *.egg-info,
    .pytest_cache,
    coverage,
    node_modules,
    task/dist,
    task/node_modules

# Per-file ignores
per-file-ignores =
    # Test files can have unused imports (fixtures, types)
    tests/*:F401,F841
    # __init__ files can have unused imports (re-exports)
    */__init__.py:F401,F403
    # Config files can have long lines for URLs
    src/config/config.py:E501
    # Prompts file can have long lines
    src/llm/prompts.py:E501
