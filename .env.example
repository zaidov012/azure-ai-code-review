# ============================================================================
# Environment Variables for Azure DevOps AI PR Review Extension
# ============================================================================
# Copy this file to '.env' and fill in your values
# The .env file will be automatically loaded if python-dotenv is installed
# ============================================================================

# ----------------------------------------------------------------------------
# LLM Configuration
# ----------------------------------------------------------------------------
LLM_PROVIDER=openai
# Model options: gpt-5, gpt-4-turbo, gpt-4, o1-preview, o1-mini
# Note: GPT-5 and o1 models don't accept temperature/max_tokens parameters
LLM_MODEL=gpt-5
LLM_API_KEY=your-api-key-here
LLM_API_BASE=
LLM_API_VERSION=
# Temperature and max_tokens are ignored for gpt-5 and o1 models
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000

# ----------------------------------------------------------------------------
# Azure DevOps Configuration
# ----------------------------------------------------------------------------
AZDO_ORG_URL=https://dev.azure.com/yourorg
AZDO_PROJECT=YourProject
AZDO_REPOSITORY=YourRepository
AZDO_PERSONAL_ACCESS_TOKEN=your-pat-token-here
AZDO_VERIFY_SSL=true

# ----------------------------------------------------------------------------
# General Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
CONFIG_PATH=config.yaml
